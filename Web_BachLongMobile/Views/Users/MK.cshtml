
@{
    ViewBag.Title = "MK";
    Layout = "~/Views/LayOut/LayOutNguoiDung.cshtml";
}
<div class="Noidung">
    <div id="aaa">
        <div class="ii"></div>
        <h2 id="tt">Đổi Mật Khẩu</h2>
    </div>

    @using (Html.BeginForm("MK", "Users", FormMethod.Post))
{
    <div class="cc">
        <table class="sua">
            <tr>
                <td class="c" width="200">
                    <label>Nhập Mật Khẩu (Cũ):</label>
                </td>
                <td>
                    <input type="password" name="pass" required />
                </td>
            </tr>
            <tr>
                <td class="c" width="200">
                    <label>Nhập Mật Khẩu (Mới):</label>
                </td>
                <td>
                    <input type="password" name="pass1" id="pass" required />
                </td>
            </tr>
            <tr>
                <td class="c" width="200">
                    <label>Nhập Lại Mật Khẩu (Mới):</label>
                </td>
                <td>
                    <input type="password" name="pass2" required />
                </td>
            </tr>
        </table>
        <div class="bto">
            <button class="button-submit" onclick="return thong_bao();">Cập Nhật</button>
        </div>
    </div>
}
</div>
<script>
    function thong_bao() {
        var c = document.getElementById('pass').value;

        if (c.length < 6 || c.length > 20) {
            alert("Mật khẩu phải có độ dài từ 6 - 20 kí tự!");
            return false;
        }

        return true;
    }
</script>



