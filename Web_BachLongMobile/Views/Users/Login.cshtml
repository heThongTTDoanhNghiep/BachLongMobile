@model Web_TMDT.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Đăng Nhập</title>
    <link href="~/Content/DangKyDangNhap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/DangKyDangNhap/metisMenu.min.css" rel="stylesheet" />
    <link href="~/Content/DangKyDangNhap/sb-admin-2.css" rel="stylesheet" />
    <link href="~/Content/DangKyDangNhap/font-awesome.min.css" rel="stylesheet" />

    <link href="~/Content/LayOut/screen.css" rel="stylesheet" />
</head>
<body>
        <div class="row">

            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Đăng Nhập</h3>
                </div>
                    <div class="panel-body">
                        <div class="form-horizontal">
                            <br />
                            @using (Html.BeginForm("Login", "Users", FormMethod.Post))
                            {
                                <form role="form">
                                    <fieldset>
                                        <div class="mmm"><h5>@ViewBag.ThongBao</h5></div>
                                       
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.UserName)
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.UserName, new {@class="textbox" })
                                                @Html.ValidationMessageFor(model => model.UserName)
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.PassWord)
                                            <div class="col-md-8">
                                                @Html.PasswordFor(model => model.PassWord, new { @class = "textbox" })
                                                @Html.ValidationMessageFor(model => model.PassWord)
                                            </div>
                                        </div>
                                       

                                        <div class="form-group1">
                                            @*<div class="col-md-offset-2 col-md-8">
                                                <input id="btdn" type="submit" value="Đăng Nhập" class="btn btn-default" />
                                            </div>*@
                                            <div class="bt">
                                                
                                                <button class="button-submit">Đăng Nhập</button>
                                            </div>
                                        </div>
                                        <div class="form-group2">
                                            Bạn chưa có tài khoản?
                                            <div class="ttt">
                                                <a href="~/Users/Register">Đăng Ký</a>
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            }

                        </div>
                    </div>
                </div>
            </div>
</body>
</html>
<style>
    .panel-title {
        color: white;
    }
     .form-group {
        margin-top: 5px;
    }
     .textbox {
        width: 250px;
        height: 45px;
    }
    .col-md-8{
        margin-left: 140px;
        margin-top: -50px;
        width: 270px;  
    } 
    .mmm {
        margin-left: 0px;
        width: 400px;
        color: red;
        margin-top: -40px;
    }

    .row {
        margin-left: 440px;
        width: 415px;
        height: 50px;
    }
    .ttt {
        margin-left: 172px;
        margin-top: -28px;
        color: blue;
    }

        .ttt a:hover {
            color: red;
        }
    .bt button {
        margin-left: 127px;
        margin-top: -10px;
        margin-bottom: 5px;
        width: 177px;
        height: 52px;
    }
    .form-group2{
        margin-left: 127px;
    }
     .panel-default > .panel-heading {
        background-color: #14a19a;
    }

    .panel-body {
        background-color: #ffffff;
    }
</style>
