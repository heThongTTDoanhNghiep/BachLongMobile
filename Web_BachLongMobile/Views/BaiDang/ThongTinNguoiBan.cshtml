@using Web_TMDT.Models;
@model List<ChiTietSanPham>
@{
    ViewBag.Title = "TTNguoiBan";
    Layout = "~/Views/LayOut/LayOutNguoiDung.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/DanhGia/Rating.js"></script>

<link href="~/Content/LoaiSP/SPMoi.css" rel="stylesheet" />
@foreach (var item in Model)
{
    <div class="product-detail">
        <div class="panel-heading">
            <h2>Thông Tin Sản Phẩm</h2>
        </div>
        <div class="row group-info">
            <div class="col-md-4 image">
                <img src="@Url.Content("~/Hinh_anh/"+item.hinhanh)" />
            </div>
            <div class="col-md-8 product-info">
                <div class="field product-name">
                    <h3>@item.TenSP</h3>
                </div>
                <div class="field price">
                    <span> Giá: @String.Format("{0:0,0}", @item.GiaSP) VNÐ</span>
                </div>

                <div class="field quantity">
                    <span> Số Lượng hiện có: @item.SoLuongTon</span>
                </div>
                <div class="field description">
                    <p> Thông Tin Sản Phẩm: @item.MoTa</p>
                </div>
                <div class="field button-group">
                    @using (Html.BeginForm("ThemGH", "GioHang", new { @masp = @item.MaSP, @url = Request.Url.ToString() }))
                    {
                        <button class="button-submit">Thêm Vào Giỏ <i class="fa fa-shopping-cart"></i></button>
                    }
                </div>
                <div class="rating">
                    <p>Số Người Ðánh giá: @item.DemNguoiDG</p>
                    <p>Ðiểm Ðánh giá Trung Bình: @item.DiemDG</p>
                    @if (@item.DiemDG == 0)
                    {
                        <h5>Chưa Có Ðánh Giá</h5>
                    }
                    else if (@item.DiemDG == 1)
                    {
                        <div id="star">
                            <ul>
                                <li><img class="nuasao" src="@Url.Content("~/Hinh/star2.png")" /></li>
                            </ul>
                        </div>
                    }
                    else if (@item.DiemDG == 2)
                    {
                        <div id="star">
                            <ul>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                            </ul>
                        </div>
                    }
                    else if (@item.DiemDG == 3)
                    {
                        <div id="star">
                            <ul>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img class="nuasao" src="@Url.Content("~/Hinh/star2.png")" /></li>
                            </ul>
                        </div>
                    }
                    else if (@item.DiemDG == 4)
                    {
                        <div id="star">
                            <ul>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                            </ul>
                        </div>
                    }
                    else if (@item.DiemDG == 5)
                    {
                        <div id="star">
                            <ul>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img class="nuasao" src="@Url.Content("~/Hinh/star2.png")" /></li>
                            </ul>
                        </div>
                    }
                    else if (@item.DiemDG == 6)
                    {
                        <div id="star">
                            <ul>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                            </ul>
                        </div>
                    }
                    else if (@item.DiemDG == 7)
                    {
                        <div id="star">
                            <ul>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img class="nuasao" src="@Url.Content("~/Hinh/star2.png")" /></li>
                            </ul>
                        </div>
                    }
                    else if (@item.DiemDG == 8)
                    {
                        <div id="star">
                            <ul>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                            </ul>
                        </div>
                    }
                    else if (@item.DiemDG == 9)
                    {
                        <div id="star">
                            <ul>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img class="nuasao" src="@Url.Content("~/Hinh/star2.png")" /></li>
                            </ul>
                        </div>
                    }
                    else if (@item.DiemDG == 10)
                    {
                        <div id="star">
                            <ul>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                                <li><img src="@Url.Content("~/Hinh/star6.png")" /></li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
  
}
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>



