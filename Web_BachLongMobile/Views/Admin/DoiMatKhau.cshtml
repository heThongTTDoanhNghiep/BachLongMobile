@using Web_TMDT.Models
@model User
@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/LayOut/LayoutAdmin.cshtml";
}
<div>
    <div class="Noidung">
        <div id="aaa">
            <div class="ii"></div>
            <h2 class="tt">Đổi Mật Khẩu Người Dùng</h2>
        </div>
        @using (Html.BeginForm("DoiMatKhau", "Admin", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <div class="col-md-2">
                    <label>Tên Người Dùng: </label>
                </div>
                <div class="col-md-8">
                    <input class="form-control" type="text" name="ten" value="@Model.UserName" required="required">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <label>Mật Khẩu Mới: </label>
                </div>
                <div class="col-md-8">
                    <input class="form-control" type="password" name="MatKhau" required="required">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <label>Nhập Lại Mật Khẩu: </label>
                </div>
                <div class="col-md-8">
                    <input class="form-control" type="password" name="NhapLaiMK" required="required">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 col-md-offset-2">
                    <button class="button-submit btn-1">Cập Nhật</button>
                </div>
            </div>
            
        }
    </div>
</div>




