@using Web_TMDT.Models;
@using PagedList.Mvc;
@model  PagedList.PagedList<ChiTietGioHang>

@{
    ViewBag.Title = "CTDHMua";
    Layout = "~/Views/LayOut/LayoutAdmin.cshtml";
}
<link href="~/Content/LayOutAdmin/Csstimkiem.css" rel="stylesheet" />
<br />
<h3 class="aaaa">Chi Tiết Đơn Hàng</h3>
<br/>
<table class="table" border="1">
    <tr class="ttt">
        <th>
            <label>Mã Đơn Hàng</label>
        </th>
        <th>
            <label>Mã Sản Phẩm</label>
        </th>
        <th>
            <label>Tên Sản Phẩm</label>
        </th>
        <th>
            <label>Số Lượng</label>
        </th>
        <th>
            <label>Thành Tiền</label>
        </th>
        
        
    </tr>
@foreach (var item in Model)
{

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDDonHangMua)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaSanPham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BaiDang.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
           @string.Format("{0:0,0}", @item.ThanhTien) VNĐ
        </td>
        
    </tr>
}

</table>
<div class="phantrang">
    @*tao trang lien ket*@
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    <div class="pt">
        @Html.PagedListPager(Model, page => Url.Action("CTDHMua", new { page = page }))
    </div>
</div>
<style>
    .pt li {
        display: inline;
    }
    .aaaa{
        color: blue;
    }
    .ddd {
        color: blue;
        margin-left: 20%;
    }
    #buttontim{
        float: left;
        margin-left: 150px;
        margin-top: 30px;
    }
    .ttt {
        background-color: #14a19a;
        color: white;
    }

</style>