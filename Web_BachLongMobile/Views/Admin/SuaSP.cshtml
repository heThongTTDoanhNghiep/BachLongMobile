@using Web_TMDT.Models;
@model BaiDang
@{
    ViewBag.Title = "SuaSP";
    Layout = "~/Views/LayOut/LayoutAdmin.cshtml";
}
<div class="Noidung">
    @*<div class="form-horizontal">*@
    <div id="aaa">
        <div class="ii"></div>
        <h2 class="td">Sửa Sản Phẩm Đăng Tin</h2>
    </div>
    @Html.ValidationSummary(true)
@using (Html.BeginForm("SuaSP", "Admin", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
            {
    <div class="row">
        <div class="col-md-4">
            <img id="hinhanh" src="@Url.Content("~/Hinh_anh/"+@Model.HinhAnh)" />
        </div>
        @*<div class="hinh">
            <input type="file" name="fileUpload" class="button-submit" />
            @ViewBag.ThongBao
        </div>*@
        <div class="col-md-8">
            <div class="form-group">
                <label class="col-md-2">Tên Sản Phẩm:  </label>
                <div class="col-md-8"><input class="form-control" type="text" name="tensp" value="@Model.TenSP "></div>
            </div>
            <div class="form-group">
                <label class="col-md-2"> Loại Sản Phẩm:  </label>
                <div class="col-md-8">
                    @*<input type="text" name="loaisp" value="@Model.LoaiSanPham.TenLoai">*@
                    @Html.DropDownList("Loai", null, htmlAttributes: new { @class="form-control"})
                </div>
            </div>
            <div class="form-group">
                <label class ="col-md-2"> Giá Sản Phẩm:  </label>
                <div class="col-md-8">
                    <input class="form-control" type="text" name="giasp" value="@Model.GiaSP">
                </div> 
            </div>          
            @*<div class="form-group">
                <label> Số Lượng Đăng:  </label>
                <div class="col-md-8">
                    <input type="text" name="sld" value="@Model.SoLuong"  disabled >
                </div>
            </div>
            <div class="form-group">
                <label> Số Lượng Tồn:  </label>
                <div class="col-md-8">
                    <input type="text" name="sl" value="@Model.Soluongton" disabled>
                </div>
            </div>*@
            <div class="form-group">
                <label class="col-md-2"> Thông Tin Sản Phẩm:  </label>
                <div class="col-md-8">
                    <textarea name="mota" class="form-control">@Model.MoTa</textarea>
                    @*<input type="text" name="mota" value="@Model.MoTa" >*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 col-lg-offset-2">
                    <button class="button-submit btn-1">Sửa Sản Phẩm</button>
                </div>
            </div>
            

        </div>
    </div>
}
</div>




