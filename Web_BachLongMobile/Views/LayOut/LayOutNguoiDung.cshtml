<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/LayOut/fonts.css" rel="stylesheet" />
    @*<link href="~/Content/LayOut/screen.css" rel="stylesheet" />*@
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.4.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/Site.css" rel="stylesheet" />
    @*ChènQuảngCáo*@
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.js"></script>
    <script src="~/Scripts/script.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.pack.js"></script>
    <link href="~/NivoSlider/nivo-slider.css" rel="stylesheet" />


    
</head>
<body>
    <section class="headline">
        <div class="container clearfix">            
            <div class="user pull-right">
                @if (Session["Name"] != null)
                {
                    <ul class="menu">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-user fa-fw"></i> @Session["Name"].ToString()
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="~/Users/SuaUser">Thông Tin cá nhân</a>
                                </li>
                                <li>
                                    <a href="~/Users/MK">Đổi Mật Khẩu</a>
                                </li>
                                <li>
                                    <a href="~/BaiDang/ThongTinMuaHang">Thông Tin Mua hàng</a>
                                </li>
                                <li>
                                    @Html.ActionLink("Đăng Xuất", "Logout", "Users", null, htmlAttributes: new { @class = "Users" })
                                </li>
                            </ul>

                            <!-- /.dropdown-user -->
                        </li>
                        <li>@Html.Action("GioHangPartial", "GioHang")</li>                        
                    </ul>

                }
                else
                {                   
                    
                    <ul class="menu">
                        <li>
                            @Html.Action("GioHangPartial", "GioHang")
                        </li>
                        <li>
                            <a href="@Url.Action("Register", "Users")"><i class="fa fa-sign-in"></i> Đăng ký</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Login", "Users")"><i class="fa fa-unlock"></i> Đăng nhập</a>
                        </li>
                    </ul>
                    
                }
            </div>

        </div>
    </section>

    <section class="header">
        <div class="container clearfix">
            <div id="logo" class="pull-left">
                <a href="/">
                    <img src="~/Hinh/logo.png" />
                </a>
            </div>
            <div class="navbar navbar-default pull-right">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/">Trang chủ</a>
                    </li>
                    <li>
                        <a href="@Url.Action("SanPham", "SPMoi")">Sản phẩm</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Home")">Giới thiệu</a>
                    </li>
                    <li>
                        <a href="#">Liên hệ</a>
                    </li>
                </ul>
            </div>
        </div>

        @*<div class="flash success" id="divmenu">
            <div id="raovat">
                <div>
                    @Html.Action("GioHangPartial", "GioHang")
                </div>
                
                <i class="fa fa-pencil-square-o"></i>
                @Html.ActionLink("Đăng tin Sản Phẩm", "BaiDang", "BaiDang", null, htmlAttributes: new { @class = "DangTin" })

            </div>
            
            <div class="iconlogo">
                <a href="~/SPMoi/SPMoi">
                    <img src="~/Hinh/iPhone-icon.png" /></a>
                </div>
           
        </div>*@

    </section>

    <section class="QuangCao">
        <div class="container">
            <div id="slider" class="nivoSlider">
                <img src="~/Hinh/aaaa.png" />
                <img src="~/Hinh/bbbbb.png" />
                <img src="~/Hinh/ccccc.png" />
                <img src="~/Hinh/dddd.png" />
            </div>
            <div id="htmlcaption" class="nivo-html-caption">
                <strong>This</strong> is an example of a <em>HTML</em> caption with <a href="#">a link</a>.
            </div>
        </div>
    </section>    

    <section class="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="activity">
                        @Html.Action("LoaiSPPartial", "Home")
                    </div>
                </div>
                <div class="col-md-9 main-content">
                    <div id="search">
                        @Html.Action("TimKiem", "Home")
                    </div>
                    <div class="content">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="footer">
        <div class="container">    
            <address>
                <p><i class="fa fa-phone"></i> Số điện thoại: 08.35353508</p>
                <p><i class="fa fa-envelope"></i> Email: contact@sgu.edu.vn</p>
                <p><i class="fa fa-map-marker"></i> 273 An Dương Vương, Quận 5, TP.Hồ Chí Minh</p>
            </address>       
                                
               
           
        </div>
    </section>
    
</body>
</html>
<script type="text/javascript">
    $(window).load(function () {
        $('#slider').nivoSlider({

            controlNav: false,
            prevText: '',
            nextText: ''
        });
        
    });
</script>

