
@using Web_TMDT.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<BaiDang>
@{
    ViewBag.Title = "SPtheo_loai";
    Layout = "~/Views/LayOut/LayOutNguoiDung.cshtml";
}
@if (Model.Count == 0)
{
    <div class="mmm"><h2>@ViewBag.sp</h2></div>
}
<div class="mmm"><h2>@ViewBag.ThongBao</h2></div>
<div class="spmoiaaa">
    @{int n = 0;}
    @foreach (var item in Model)
    {
        n++;
        <div class="TrangSanPham">
            <div>
                <div class="ten">
                    <a href="@Url.Action("CTSP", "SPMoi", new { @masp = item.MaSanPham})"><label for="male">@item.TenSP</label></a>
                </div>
                <div class="hinh">
                    <a href="@Url.Action("CTSP", "SPMoi", new { @masp = item.MaSanPham })"> <img src="@Url.Content("~/Hinh_anh/"+item.HinhAnh)" width="130" height="160" /> </a>
                </div>

                <div class="giasp">
                    <label for="malea">Giá: @string.Format("{0:0,0}", @item.GiaSP) VNĐ</label>
                </div>
                <div class="slsp">
                    <label for="malea">Số Lượng Còn: @item.Soluongton</label>
                </div>
            </div>
        </div>


        if (n % 3 == 0)
        {
            <div style="clear:both"></div>
            <br />
        }
    }
</div>
<div style="clear:both"></div>
@*tao trang lien ket*@
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    <div class="pt">
        @Html.PagedListPager(Model, page => Url.Action("SPtheo_loai", new { page, maloai = Request.QueryString["maloai"] }))
    </div>

    



